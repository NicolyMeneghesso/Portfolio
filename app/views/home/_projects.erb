<div class="row g-0 position-relative challenges" id="projects">
    <!-- Loop ERB: para iterar de 1 a 12, que são os números dos desafios.-->
    <% (1..12).each do |i| %>
        <div class="col-6 col-md-4 col-lg-3 g-0">
            <!-- String Formatting: desafio#{'%02d' % i} para formatar o número do desafio como uma string de dois dígitos
                (ex: 01, 02, etc.), garantindo que os nomes dos arquivos de imagem estejam corretos.-->
            <img class="img-fluid img-challenges" src="<%= image_url "desafio#{'%02d' % i}.png" %>" alt="desafio<%= i %>">
            <p class="text-challenges">Projetos<%= i %></p>
        </div>
    <% end %>
</div>