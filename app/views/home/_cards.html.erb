                        <div class="card-body">O primeiro projeto.</div>
                    </div>
                    <div class="flip-card-back" style="background-image: url('<%= image_url 'firstproject6.png' %>'); background-size: cover; border-radius: 5px">
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-80">
                <%= image_tag 'firstproject1.png', class: 'card-img-top', alt: 'First Girl' %>
                <div class="card-body">
                    <p class="card-text">This is a short card.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row row-cols-md-4 g-3 " style="margin: 20px;">
        <div class="col"></div>
        <div class="col"></div> 
        <div class="col">
            <div class="card h-80">
                <%= image_tag 'firstproject1.png', class: 'card-img-top', alt: 'First Girl' %>
