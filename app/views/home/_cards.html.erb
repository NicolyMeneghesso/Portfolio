                        <%= image_tag 'firstproject1.png', class: 'custom-img card-img-top' %>
                        <div class="text-front text-bg-dark rounded-1">O primeiro projeto em Rails</div>
                    </div>
                    <div class="flip-card-back custom-bg-img" 
                        style="background-image: url('<%= image_url 'firstproject2.png' %>');">
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col">
